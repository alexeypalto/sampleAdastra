<resources>

    <style name="MemeCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MemeCardView.Item">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Text view -->
    <style name="MemeTextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MemeTextViewMedium">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MemeTextView.Strong">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MemeTextView.Strong.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="MemeTextViewMedium.Strong">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MemeTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MemeTextViewMedium.White">
        <item name="android:textColor">@color/white</item>
    </style>



</resources>